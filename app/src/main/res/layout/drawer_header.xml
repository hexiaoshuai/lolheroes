<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/drawer_header_user_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/drawer_header_user_img"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/drawer_header_user_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/drawer_header_user_not_login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_toRightOf="@+id/drawer_header_user_img"
            android:layout_toEndOf="@+id/drawer_header_user_img" />

</RelativeLayout>